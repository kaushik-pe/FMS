<style>
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    border-radius: 5px;
}

/* On mouse-over, add a deeper shadow */
.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

/* Add some padding inside the card container */
.container {
    padding: 2px 16px;
}
</style>
<div id="mainProfilePage">
  <div class="card">
      <div class="container">
        <h4><b>Admin User <%=@user.name%></b></h4>
        <p>Email ID: <%=@user.emailid%></p>
        <p>Contact No: <%=@user.contactno%></p>
        <p>Joining Date: <%=@user.credate.to_time.strftime('%d/%m/%Y')%></p>
      </div>
  </div>
</dib>
