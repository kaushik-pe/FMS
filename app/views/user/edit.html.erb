<form method="post" action="/profile/update">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  Name  <input type="text" value="<%=@user.name%>" name="name" class="form-control" width="2" required="required"></br>
  Email ID <input type="text" value="<%=@user.emailid%>" name="emailid" class="form-control" width="3" required="required"></br>
  Contact No <input type="text" value="<%=@user.contactno%>" name="contactno" class="form-control" width="4" required="required"></br>
  <input type="submit" class="btn btn-primary" value="Update">
</form>
