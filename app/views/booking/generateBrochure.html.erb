<style>
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 100%;
    border-radius: 5px;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

img {
    border-radius: 5px 5px 0 0;
}

.container {
    padding: 2px 16px;
}
</style>
<h4 style="text-align"> Popular Destinations </h4>
<%count = 10%>
<%if(results.length<10)%>
<%count = results.length%>
<%end%>
<div id="resultsDivison" style="margin-left:50px">
<%for i in 0..count-1%>
   </br>
    <div class="card">
      <div class="container">
        <h5><b><%=results[i]["name"] %></b></h5>
        <p>Address: <%=results[i]["formatted_address"]%></p>
        <p>Rating: <%=results[i]["rating"]%></p>
      </div>
    </div>
    </br>
<%end%>
</div>
